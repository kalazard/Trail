<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Evenement" table="evenement">
    <indexes>
      <index name="fk_evenement_createur_idx" columns="createur"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="datecreation" type="date" column="datecreation" nullable="false"/>
    <field name="datedebut" type="datetime" column="datedebut" nullable="false"/>
    <field name="datefin" type="datetime" column="datefin" nullable="false"/>
    <field name="titre" type="string" column="titre" length="255" nullable="false"/>
    <field name="description" type="string" column="description" length="255" nullable="false"/>
    <field name="status" type="string" column="status" length="255" nullable="false"/>
    <field name="alias" type="string" column="alias" length="255" nullable="false"/>
    <field name="lienkid" type="string" column="lienkid" length="255" nullable="false"/>
    <many-to-one field="createur" target-entity="Membre">
      <join-columns>
        <join-column name="createur" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="itineraire" target-entity="Itineraire" inversed-by="evenement">
      <join-table name="parcours">
        <join-columns>
          <join-column name="evenement" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="itineraire" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
