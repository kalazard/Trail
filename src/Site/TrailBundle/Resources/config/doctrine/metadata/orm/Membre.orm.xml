<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Membre" table="membre">
    <indexes>
      <index name="fk_membre_role_idx" columns="role"/>
      <index name="fk_membre_avatar_idx" columns="avatar"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="email_UNIQUE" columns="email"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="email" type="string" column="email" length="255" nullable="false"/>
    <field name="nom" type="string" column="nom" length="255" nullable="false"/>
    <field name="prenom" type="string" column="prenom" length="255" nullable="false"/>
    <field name="datenaissance" type="date" column="datenaissance" nullable="false"/>
    <field name="telephone" type="string" column="telephone" length="45" nullable="false"/>
    <field name="licence" type="string" column="licence" length="255" nullable="false"/>
    <field name="tokenics" type="string" column="tokenics" length="255" nullable="false"/>
    <many-to-one field="role" target-entity="Role">
      <join-columns>
        <join-column name="role" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="avatar" target-entity="Image">
      <join-columns>
        <join-column name="avatar" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="itineraire" target-entity="Itineraire" inversed-by="membre">
      <join-table name="note">
        <join-columns>
          <join-column name="membre" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="itineraire" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="itinerairefavoris" target-entity="Itineraire" inversed-by="membres">
      <join-table name="favoris">
        <join-columns>
          <join-column name="membres" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="itinerairefavoris" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
