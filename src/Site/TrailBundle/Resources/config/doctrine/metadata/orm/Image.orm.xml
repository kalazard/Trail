<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Image" table="image">
    <indexes>
      <index name="fk_image_auteur_idx" columns="auteur"/>
      <index name="fk_image_categorie_idx" columns="categorie"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="titre" type="string" column="titre" length="255" nullable="false"/>
    <field name="description" type="string" column="description" length="255" nullable="false"/>
    <field name="taille" type="float" column="taille" precision="10" scale="0" nullable="false"/>
    <field name="poids" type="float" column="poids" precision="10" scale="0" nullable="false"/>
    <field name="path" type="string" column="path" length="255" nullable="false"/>
    <many-to-one field="categorie" target-entity="Categorie">
      <join-columns>
        <join-column name="categorie" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="auteur" target-entity="Membre">
      <join-columns>
        <join-column name="auteur" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
