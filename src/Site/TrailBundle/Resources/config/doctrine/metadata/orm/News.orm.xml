<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="News" table="news">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="titre" type="string" column="titre" length="255" nullable="false"/>
    <field name="visibilite" type="integer" column="visibilite" nullable="false"/>
    <field name="alias" type="string" column="alias" length="255" nullable="false"/>
    <field name="texte" type="text" column="texte" nullable="false"/>
    <field name="auteur" type="integer" column="auteur" nullable="false"/>
    <field name="date" type="date" column="date" nullable="false"/>
    <many-to-many field="commentaire" target-entity="Commentaire" inversed-by="new">
      <join-table name="commentairenews">
        <join-columns>
          <join-column name="new" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="commentaire" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
