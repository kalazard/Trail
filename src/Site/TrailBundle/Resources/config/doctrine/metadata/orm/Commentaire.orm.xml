<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Commentaire" table="commentaire">
    <indexes>
      <index name="fk_commentaire_auteur_idx" columns="auteur"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="texte" type="text" column="texte" nullable="false"/>
    <many-to-one field="auteur" target-entity="Membre">
      <join-columns>
        <join-column name="auteur" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="new" target-entity="News" mapped-by="commentaire"/>
    <many-to-many field="itineraire" target-entity="Itineraire" inversed-by="commentaire">
      <join-table name="commentaireitineraire">
        <join-columns>
          <join-column name="commentaire" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="itineraire" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
