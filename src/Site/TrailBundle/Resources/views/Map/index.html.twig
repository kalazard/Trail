<!DOCTYPE HTML>
<html>
{% block body %}
 <head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
    {% stylesheets filter='cssrewrite' '@SiteTrailBundle/Resources/css/*' %}
      <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    <style type="text/css">
        html, body 
        {
          height: 100%;
        }
    </style>
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.2/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
    <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
    <script type="text/javascript" src="https://rawgithub.com/mpetazzoni/leaflet-gpx/master/gpx.js"></script>
    <script src="http://open.mapquestapi.com/sdk/js/v7.2.s/mqa.toolkit.js?key=Fmjtd%7Cluu821u12h%2C72%3Do5-94bauw"></script>
    <script src="http://open.mapquestapi.com/sdk/leaflet/v1.s/mq-map.js?key=Fmjtd%7Cluu8210720%2C7a%3Do5-94bahf"></script>
    <script src="http://open.mapquestapi.com/sdk/leaflet/v1.s/mq-geocoding.js?key=Fmjtd%7Cluu8210720%2C7a%3Do5-94bahf"></script>
    {% javascripts '@SiteTrailBundle/Resources/js/map/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <title>{% block title %}Map{% endblock %}</title>
    <meta charset="utf-8">
</head>
<body>
  <div class="page-header">
    {% image '@SiteTrailBundle/Resources/views/Map/logo2.png' %}
    <h1><img src="{{ asset_url }}" alt="Symfony!" style="width :12; height: 90px;"/><small>Site de cartographie collaborative</small></h1>
    {% endimage %}    
  </div>
  <style>
      .container-map{
          height: 100%;
          width: 100%;
      }
      .map{
          width:200px;
      }
  </style>
  <div class="container container-map">
      <div id="map" class="map context-menu-one box menu-1"></div>
    <nav role="navigation" class="navbar navbar-default">
        <div class="navbar-header">
            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">Controles</a>
        </div>
        <div id="navbarCollapse" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-form">
              <li class="active">
                  <input type="text" class="form-control" placeholder="Latitude" aria-describedby="basic-addon1" id="lat">
              </li>
              <li>
                  <input type="text" class="form-control" placeholder="Longitude" aria-describedby="basic-addon1" id="lng">
              </li>
              <li>
                  <input type="text" class="form-control" placeholder="Altitude" aria-describedby="basic-addon1" id="elevation">
              </li>
              <li>
                  <input type="text" class="form-control" placeholder="Zoom" aria-describedby="basic-addon1" id="zoom"> 
              </li>
              
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><button type="button" class="btn btn-default navbar-btn" id="ok">Bouger</button></li>
                <li><button type="button" class="btn btn-default navbar-btn" id="iti">Nouvel Itinéraire</button></li>
            </ul>
        </div>
      </nav>
      
    </div>
    <div class="modal fade" id="save">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Fermer"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Sauvegarde de l'itinéraire</h4>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="recipient-name" class="control-label">Nom :</label>
                <input type="text" class="form-control" id="nom">
              </div>
              <div class="form-group">
                <label for="message-text" class="control-label">Numéro :</label>
                <input type="number" class="form-control" id="numero"></textarea>
              </div>
              <div class="form-group">
                <label for="recipient-name" class="control-label">Type de chemin :</label>
                <input type="text" class="form-control" id="typechemin">
              </div>
              <div class="form-group">
                <label for="message-text" class="control-label">Commentaire :</label>
                <textarea class="form-control" id="commentaire"></textarea>
              </div>
              <div class="form-group">
                <label for="recipient-name" class="control-label">Difficulté:</label>
                <input type="text" class="form-control" id="difficulté">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            <button type="button" class="btn btn-primary" id="saveiti">Sauvegarder</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div>
      <div class="modal fade" id="addpoi">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Fermer"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Sauvegarde du POI</h4>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="recipient-name" class="control-label">Titre :</label>
                <input type="text" class="form-control" id="titre">
              </div>
              <div class="form-group">
                <label for="recipient-name" class="control-label">Description :</label>
                <input type="text" class="form-control" id="description"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            <button type="button" class="btn btn-primary" id="savepoi">Sauvegarder</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
</div>
</body>
{% endblock %}
</html>
