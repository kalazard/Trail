{% extends "SiteTrailBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - {{ new.titre }}{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{ new.titre }}</h1>
		<div class="content">
			<div class="panel panel-default">
				<div class="panel-body">
					<p>
						{{ new.texte }}
					</p>
				</div>
			</div>
			<p class="text-right colored">
				{{ new.auteur.prenom }} {{ new.auteur.nom }} <br>
				{{ new.date|date("d/m/Y") }}
			</p>
		</div>
	</div>
{% endblock %}